<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <!-- Capa semitransparente (20% de opacidad) -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Recuadro de Texto -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTexto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textoInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="La necesidad surge de la importancia de combinar educación y tecnología para hacer que el aprendizaje sobre biodiversidad sea más atractivo y accesible. El proyecto busca desarrollar una aplicacion movil interactiva para conectar a los usuarios con el conocimiento sobre la flora de una manera educativa, visual y accesible.
El proyecto ofrece un contenido interactivo y educativo en línea para que de esta manera se promueva el aprendizaje de la biodiversidad, mientras se hace un enfoque tecnológico utilizando análisis probabilísticos. A través de un cuestionario dinámico, se permite a los usuarios identificar especies con base en atributos específicos, obteniendo como resultado una predicción porcentual acompañada de imágenes y descripciones relacionadas."
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:justificationMode="inter_word"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/contenedorBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardTexto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnWeb1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/img"
            android:scaleType="fitCenter"
            android:contentDescription="Botón 1"/>

        <ImageButton
            android:id="@+id/btnWeb2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/img_1"
            android:scaleType="fitCenter"
            android:contentDescription="Botón 2"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regrsar"
        android:textSize="16sp"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
